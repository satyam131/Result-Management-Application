<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Student Result</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-top: 50px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn {
      margin-top: 5px;
    }

    h4 {
      text-align: center;
    }

    .addStu .mb-3 {
      margin-bottom: 15px;
    }

    .form-label {
      font-weight: bold;
    }

    #message {
      color: red;
      margin-bottom: 10px;
      text-align: center;
    }

    .backButton {
      border: 2px solid rgb(103, 103, 228);
      text-decoration: none;
      margin: 8px;
      padding: 5px;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      background-color: rgb(75, 75, 188);
    }

    .viewButton {
      border: 2px solid rgb(103, 103, 228);
      text-decoration: none;
      margin: 8px;
      padding: 5px;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      background-color: rgb(75, 75, 188);
    }

    .addButton {
      border: 2px solid rgb(103, 103, 228);
      text-decoration: none;
      margin: 8px;
      padding: 6px;
      padding-left: 15px;
      padding-right: 15px;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      background-color: rgb(75, 75, 188);
    }
  </style>
</head>

<body>
  <div class="container mt-5">
   
    <a href="/teacher/option" class="btn btn-info backButton" style="margin-top: 5px;">Back</a>

    <h4 style="color: rgb(10, 10, 68); font-size: 30px;"> Student Result Add Data</h4>

    
    <form method="POST" class="addStu" action="/addstudent" autocomplete="off" onsubmit="return validateForm()">
      <div class="mb-3">
        <label for="rollnoInput" class="form-label">Roll Number. :</label>
        <input type="number" name="rollno" required class="form-control" id="rollnoInput">
        <div id="rollnoError" class="error"></div>
      </div>
      <div class="mb-3">
        <label for="nameInput" class="form-label">Name :</label>
        <input type="text" name="name" required class="form-control" id="nameInput">
        <div id="nameError" class="error"></div>
      </div>
      <div class="mb-3">
        <label for="dobInput" class="form-label">Date of Birth :</label>
        <input type="date" name="dob" class="form-control" id="dobInput">
        <div id="dobError" class="error"></div>
      </div>
      <div class="mb-3">
        <label for="scoreInput" class="form-label">Score :</label>
        <input type="number" name="score" required class="form-control" id="scoreInput">
        <div id="scoreError" class="error"></div>
      </div>
      <button type="submit" class="btn btn-success addButton">Add</button>
      <a href="/teacher/viewall" class="btn btn-primary viewButton">View All</a>
      <div id="message" data-timeout="<%= timeout %>" >
        <%= message %>
      </div>
    </form>
  </div>

  
  <script>
    function validateForm() {
      const rollnoInput = document.getElementById('rollnoInput');
      const nameInput = document.getElementById('nameInput');
      const dobInput = document.getElementById('dobInput');
      const scoreInput = document.getElementById('scoreInput');
      const rollnoError = document.getElementById('rollnoError');
      const nameError = document.getElementById('nameError');
      const dobError = document.getElementById('dobError');
      const scoreError = document.getElementById('scoreError');

      // Reset error messages
      rollnoError.textContent = '';
      nameError.textContent = '';
      dobError.textContent = '';
      scoreError.textContent = '';

      // Validate Roll Number
      if (rollnoInput.value.trim() === '') {
        rollnoError.textContent = 'Roll Number is required.';
        return false;
      }

      // Validate Name
      if (nameInput.value.trim() === '') {
        nameError.textContent = 'Name is required.';
        return false;
      }

      // Validate Date of Birth
      if (dobInput.value.trim() === '') {
        dobError.textContent = 'Date of Birth is required.';
        return false;
      }

      // Validate Score
      if (scoreInput.value.trim() === '') {
        scoreError.textContent = 'Score is required.';
        return false;
      }

      return true;
    }
  </script>
</body>

</html>